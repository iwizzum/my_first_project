
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>メール送信画面</title>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="~/Contents/bootstrap.css" />
    <style type ="text/css">
        .tit
        {
            
            margin-top:0px;
            margin-bottom:10px;
            text-align:center;
            background-color:#3399cc;
            color:white;
            height:50px
        }
        .container
        {	
            min-width :200px;
	        width:400px;
	        margin:0 auto;
	        margin-bottom:5px;
        }	
        .TEXTBOX	
        {	
	        width:70%;
	        height:30px;
	        margin-bottom:10px;
	        border-color:#3399cc;
	        border-radius:7px;
        }
        .BUTTON	
        {	
            background-color:#3399cc;
            border-radius: 10px;
            color:white;
            width:150px;
	        border-color:#3399cc;
        }	
        .TEXTAREA	
        {	
	        width:500px;
	        height:60px;
	        margin:0 auto;
	        resize:none;
            outline:none;
            border-left-style:none;
            border-right-style:none;
	        border-color:#3399cc;
	        scrollbar-base-color: #3399cc;
	        scrollbar-arrow-color:black;
        }
        .File input
        {
            display:none;
        }
